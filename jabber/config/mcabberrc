set server = talk.google.com
set username = username@server.com
set jid = username@server.com
set port = 5223
set ignore_self_presence = 1
set ssl = 1
set ssl_verify = 0
set ssl_ignore_checks=1
set logging = 1
set load_logs = 1
set logging_dir = ~/.mcabber/history/
set log_muc_conf = 1
set iq_version_hide_os = 0
set otr = 1
otrpolicy default opportunistic
set roster_display_filter = ofda
set beep_on_message = 1
source /root/.mcabber/solarized-dark
color muc * on
set roster_width = 32

# Aliases
alias me     = say /me
alias online = status online
alias away   = status away
alias dnd    = status dnd
alias na     = status notavail
alias rs     = roster search
alias q      = quit
